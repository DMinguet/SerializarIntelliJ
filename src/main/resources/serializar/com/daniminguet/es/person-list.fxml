<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="serializar.com.daniminguet.es.ControladorPersona"
          alignment="center" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>
    <TableView fx:id="tvData" layoutX="20" layoutY="192"
               prefWidth="1000" prefHeight="400" stylesheets="@/css/styles.css" >
        <columns>
            <TableColumn fx:id="nombrePersona" prefWidth="75.0" text="Nombre de la persona" />
            <TableColumn fx:id="edadPersona" prefWidth="75.0" text="Edad de la persona" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"></TableView>
        </columnResizePolicy>
    </TableView>
</GridPane>
